---
import Base from '../layouts/Base.astro';

const filters = ['All', 'Operations', 'Events', 'Facilities', 'Team'];
const galleryItems = [
  {
    category: 'operations',
    title: 'Open Pit Mining',
    date: 'April 2024',
    image: 'https://images.unsplash.com/photo-1501785888041-af3ef285b470?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'operations',
    title: 'Underground Operations',
    date: 'March 2024',
    image: 'https://images.unsplash.com/photo-1506220926022-cc5c12acdb35?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'events',
    title: 'Safety Awards Ceremony',
    date: 'May 2024',
    image: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'events',
    title: 'Community Outreach',
    date: 'February 2024',
    image: 'https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'facilities',
    title: 'Processing Plant',
    date: 'January 2024',
    image: 'https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'facilities',
    title: 'Assay Laboratory',
    date: 'December 2023',
    image: 'https://images.unsplash.com/photo-1581090460304-9fe5f6d0c09c?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'team',
    title: 'Mining Department Team',
    date: 'June 2024',
    image: 'https://images.unsplash.com/photo-1450101499163-c8848c66ca85?auto=format&fit=crop&w=900&q=80'
  },
  {
    category: 'team',
    title: 'Engineering Collaboration',
    date: 'May 2024',
    image: 'https://images.unsplash.com/photo-1503387762-592deb58ef4e?auto=format&fit=crop&w=900&q=80'
  }
];
---
<Base title="Gallery">
  <section class="page-hero gallery-hero">
    <div class="container hero-body">
      <p class="eyebrow">Gallery</p>
      <h1>Scenes from the mine, community, and control rooms</h1>
      <p>
        A curated look at ANMACK MINING operations, teams, and the community projects we support
        across the Midlands Province.
      </p>
    </div>
  </section>

  <section class="gallery" id="gallery">
    <div class="container">
      <div class="section-title">
        <p class="eyebrow">Discover</p>
        <h2>Company Gallery</h2>
        <p>Explore our mining operations, events, and milestones.</p>
      </div>

      <div class="gallery-filter" role="tablist">
        {filters.map((filter) => (
          <button class={`filter-btn ${filter === 'All' ? 'active' : ''}`} data-filter={filter.toLowerCase()}>
            {filter}
          </button>
        ))}
      </div>

      <div class="gallery-grid">
        {galleryItems.map((item) => (
          <article class="gallery-item" data-category={item.category}>
            <img src={item.image} alt={item.title} loading="lazy" class="gallery-img" />
            <div class="gallery-overlay">
              <div class="gallery-title">{item.title}</div>
              <div class="gallery-date">{item.date}</div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>

